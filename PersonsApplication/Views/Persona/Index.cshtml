
@model IList<MVCIntegrador1.Models.PersonaModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="/persona/create" class="btn btn-primary">Crear persona</a>




<h2>Tabla personas:</h2>
<table class="table table-striped table-hoverable table-bordered">
    <thead style="background-color: black; color:white;">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Tipo de documento</th>
            <th>Numero de documento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDocumento.TipoDoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nro_doc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { idPersona = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

